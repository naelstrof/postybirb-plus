{
  "compilerOptions": {
    "experimentalDecorators": true,
    "declaration": true,
    "declarationDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./lib",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2017",
  },
  "include": ["./src"],
  "exclude": ["node_modules", "lib"]
}
