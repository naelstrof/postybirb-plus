{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./lib",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./lib",
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2017",
    "rootDir": "./src"
  },
  "exclude": ["node_modules", "lib"]
}
